@model RepositoryDesignPattern.EntityLayer.Concrete.Product
<div class=" container">
    <form method="post">

        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class=" form-control" />
        <label>Product Price</label>
        <input type="text" asp-for="ProductPrice" class=" form-control" />
        <label>Product Stock</label>
        <input type="text" asp-for="ProductStock" class=" form-control" />
        <label>Product Category</label>
        @Html.DropDownListFor(x=>x.Category,(List<SelectListItem>)ViewBag.v,new{@class="form-control"})
        <br />
        <button class="btn btn-secondary">Save</button>
    </form>
</div>